package message.service;

import java.util.ArrayList;

import message.model.Message;

public interface MsgService {
	
	boolean doScout(Message m);
	
	boolean doApply(Message m);
	
	ArrayList<Message> checkScout(String id);
	
	ArrayList<Message> checkApply(String t_name);
	
	boolean acceptMsg(String id, String t_name, String position);
	
	boolean rejectMsg(String id, String t_name);
	
	boolean exitTeam(String id);
}
